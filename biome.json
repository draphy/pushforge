{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {},
      "suspicious": {
        "noConsole": "off"
      },
      "style": {
        "useImportType": "error"
      }
    },
    "ignore": ["dist", "node_modules", "build", "tmp", "dev-dist", ".vscode"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "ignore": [
      "pnpm-lock.yaml",
      "dist",
      "node_modules",
      "build",
      "tmp",
      "dev-dist",
      ".vscode"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  }
}
